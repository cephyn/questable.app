{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Flutter Web Server (Port 8080)",
            "type": "shell",
            "command": "flutter",
            "args": [
                "run",
                "-d",
                "web-server",
                "--web-port",
                "8080"
            ],
            "isBackground": true,
            "problemMatcher": [
                "$flutter" // Or remove if you don't have Flutter problem matcher configured
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        }
    ]
}